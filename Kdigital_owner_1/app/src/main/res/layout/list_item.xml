<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/dogPhotoImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/TableNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TableNumber"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/dogPhotoImg"
        app:layout_constraintTop_toTopOf="@id/dogPhotoImg"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="10dp" />

    <TextView
        android:id="@+id/menu1Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="menu1Tv"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/dogPhotoImg"
        app:layout_constraintStart_toStartOf="@id/TableNumber"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/menu1EA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/menu1Tv"
        app:layout_constraintTop_toTopOf="@id/menu1Tv"
        app:layout_constraintBottom_toBottomOf="@id/menu1Tv"
        android:text="EA"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/menu2Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/menu1EA"
        app:layout_constraintTop_toTopOf="@id/menu1EA"
        app:layout_constraintBottom_toBottomOf="@id/menu1EA"
        android:text="menu2Tv"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/menu2EA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/menu2Tv"
        app:layout_constraintTop_toTopOf="@id/menu2Tv"
        app:layout_constraintBottom_toBottomOf="@id/menu2Tv"
        android:text="EA"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/menu3Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/menu2EA"
        app:layout_constraintTop_toTopOf="@id/menu2EA"
        app:layout_constraintBottom_toBottomOf="@id/menu2EA"
        android:text="menu3Tv"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/menu3EA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/menu3Tv"
        app:layout_constraintTop_toTopOf="@id/menu3Tv"
        app:layout_constraintBottom_toBottomOf="@id/menu3Tv"
        android:text="EA"
        android:layout_marginLeft="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>